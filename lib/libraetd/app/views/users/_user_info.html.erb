<dl id="user_info">

<% if user.orcid.present? %>
  <dt><%= orcid_label('profile') %></dt>
  <dd>
  <%= link_to display_orcid_from_url( normalize_orcid_url( user.orcid ) ), normalize_orcid_url( user.orcid ), { target: '_blank' } %>
  <%= link_to "<i class='fa fa-times-circle'></i>".html_safe, orcid_destroy_path,
    method: :delete, class: 'text-danger',
    data: {confirm: 'Are you sure you want to remove your ORCID account from Libra?'}
  %>
  </dd>
<%else%>
  <dd>
  <%= orcid_oauth_button %>
  </dd>
  <br/>
<% end %>

  <dt><i class="fa fa-envelope"></i> Email</dt>
  <dd><%= mail_to user.email %></dd>

</dl>
