<% if f.object.class.multiple? key %>
  <%= f.input key, as: :multi_value_with_help, disabled: f.object.readonly?(key), input_html: { rows: '7', type: 'textarea'}, required: f.object.required?(key) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), as: :text, disabled: f.object.readonly?(key), input_html: { rows: '7' } %>
<% end %>
