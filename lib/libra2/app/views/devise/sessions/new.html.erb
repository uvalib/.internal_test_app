	<h1>Development Mode Fake NetBadge</h1>
	<h2 class="verbose">NetBadge is a digital "badge" allowing you to access protected resources on the UVA network</h2>
</div>
<div id="content">
	<div id="loginBoxes">
		<fieldset class="preferredContent"><legend>Got a UVA Digital Certificate?</legend>
          <span class="col1">
            <p>Log in with your <strong>Digital Certificate</strong>.</p>
          </span>
          <span class="col2">
			  <select id="net-badge-ids">
				  <option></option>
					<% if @users.nil? == false %>
             <% @users.each { |user| %>
				        <option><%= user %></option>
             <% } %>
   				<% end %>
			  </select>
            <p class="redcaption verbose">Less typing. More secure!</p>
          </span></fieldset>
		<div id="certError">

		</div>
	</div>
	<div id="privacyWarning" class="verbose">
